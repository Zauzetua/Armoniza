@model Armoniza.Domain.Entities.categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-eye"></i> Detalles de la Categoría</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold"><i class="bi bi-tag"></i> Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.categoria1)</dd>
                    </dl>

                    <h5 class="mt-4"><i class="bi bi-people"></i> Instrumentos en esta categoria:</h5>
                    @if (Model.instrumento != null && Model.instrumento.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var instrumento in Model.instrumento)
                            {
                                <li class="list-group-item">
                                    <strong>Nombre:</strong> @instrumento.nombre - <strong>Codigo:</strong>: @instrumento.codigo
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay instruemntos en esta categoria.</p>
                    }

                </div>
                <div class="card-footer d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning btn-animado"><i class="bi bi-pencil"></i> Editar</a>
                    <a asp-action="Index" class="btn btn-secondary btn-animado"><i class="bi bi-arrow-left"></i> Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
