@model Armoniza.Domain.Entities.grupo

@{
    ViewData["Title"] = "Eliminar Grupo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Eliminar Grupo</h4>
                </div>
                <div class="card-body">
                    <h3 class="text-center">¿Estás seguro de que quieres eliminar este grupo?</h3>
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold"><i class="bi bi-tag"></i> Nombre del Grupo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.grupo1)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex gap-2">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="id" />
                        <button type="submit" class="btn btn-danger btn-animado">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary btn-animado">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
