@model Armoniza.Domain.Entities.usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="bi bi-pencil"></i> Editar Usuario</h2>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver a la Lista</a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="id" />

                <div class="mb-3">
                    <label asp-for="nombreCompleto" class="form-label fw-bold"></label>
                    <input asp-for="nombreCompleto" class="form-control" />
                    <span asp-validation-for="nombreCompleto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="telefono" class="form-label fw-bold"></label>
                    <input asp-for="telefono" class="form-control" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="correo" class="form-label fw-bold"></label>
                    <input asp-for="correo" class="form-control" />
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="idTipoNavigation" class="form-label fw-bold"></label>
                    <select asp-for="idTipo" class="form-select" asp-items="ViewBag.idTipo"></select>
                    <span asp-validation-for="idTipoNavigation" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="idGrupo" class="form-label fw-bold"></label>
                    <select asp-for="idGrupo" class="form-select" asp-items="ViewBag.idGrupo"></select>
                    <span asp-validation-for="idGrupo" class="text-danger"></span>
                </div>

               

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
