@model Armoniza.Domain.Entities.grupo

@{
    ViewData["Title"] = "Detalles del Grupo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-eye"></i> Detalles del Grupo</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold"><i class="bi bi-tag"></i> Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.grupo1)</dd>
                    </dl>

                    <h5 class="mt-4"><i class="bi bi-people"></i> Usuarios en este grupo:</h5>
                    @if (Model.usuario != null && Model.usuario.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var user in Model.usuario)
                            {
                                <li class="list-group-item">
                                    <strong>@user.nombreCompleto</strong> - @user.correo
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No hay usuarios en este grupo.</p>
                    }
                </div>
                <div class="card-footer d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning btn-animado">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-animado">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
