@model Armoniza.Application.Common.Models.ApartadoViewModel

@{
    ViewData["Title"] = "Crear Apartado";
}

<h1>Crear Apartado</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="apartado.fecharegreso" class="control-label"></label>
                <input asp-for="apartado.fecharegreso" class="form-control" />
                <span asp-validation-for="apartado.fecharegreso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="apartado.idusuario" class="control-label"></label>
                <select asp-for="apartado.idusuario" class="form-control" asp-items="ViewBag.idUsuario"></select>
                <span asp-validation-for="apartado.idusuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Instrumentos</label>
                <select asp-for="instrumentosSeleccionados" class="form-control" asp-items="ViewBag.instrumentos" multiple></select>
            </div>


            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
