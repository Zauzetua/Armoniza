@model Armoniza.Domain.Entities.usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Usuario</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        <input type="hidden" asp-for="id" />

                        <div class="mb-3">
                            <label asp-for="nombreCompleto" class="form-label fw-bold">
                                <i class="bi bi-person"></i> Nombre Completo
                            </label>
                            <input asp-for="nombreCompleto" class="form-control" />
                            <span asp-validation-for="nombreCompleto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="telefono" class="form-label fw-bold">
                                <i class="bi bi-telephone"></i> Teléfono
                            </label>
                            <input asp-for="telefono" class="form-control" />
                            <span asp-validation-for="telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="correo" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> Correo Electrónico
                            </label>
                            <input asp-for="correo" class="form-control" />
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="idTipoNavigation" class="form-label fw-bold">
                                <i class="bi bi-person-badge"></i> Tipo de Usuario
                            </label>
                            <select asp-for="idTipo" class="form-select" asp-items="ViewBag.idTipo"></select>
                            <span asp-validation-for="idTipoNavigation" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="idGrupo" class="form-label fw-bold">
                                <i class="bi bi-people"></i> Grupo
                            </label>
                            <select asp-for="idGrupo" class="form-select" asp-items="@(new SelectList((IEnumerable<SelectListItem>)ViewBag.idGrupo, "Value", "Text", Model.idGrupo))">
                                <option value="">Sin grupo</option>
                            </select>
                            <span asp-validation-for="idGrupo" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-animado">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-animado">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
``
