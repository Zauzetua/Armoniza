@model Armoniza.Domain.Entities.apartado

@{
    ViewData["Title"] = "Liberar Apartado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Liberación</h4>
                </div>
                <div class="card-body text-center">
                    <p class="fs-5">¿Estás seguro de que deseas liberar este apartado?</p>

                    <form asp-action="LiberarApartadoConfirmed" method="post">
                        <input type="hidden" asp-for="id" />

                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-check-circle"></i> Sí, liberar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


