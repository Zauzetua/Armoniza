@model IEnumerable<Armoniza.Domain.Entities.categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="bi bi-folder"></i> Categorías</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Nueva Categoría</a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-tag"></i> Nombre</th>
                        <th><i class="bi bi-trash"></i> Activa</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.categoria1)</td>
                            <td>
                                @if (item.eliminado)
                                {
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Eliminado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Editar</a>
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm text-white"><i class="bi bi-eye"></i> Ver</a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
