@model Armoniza.Domain.Entities.instrumento

@{
    ViewData["Title"] = "Crear Instrumento";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-music-note"></i> Crear Nuevo Instrumento</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label asp-for="codigo" class="form-label fw-bold">
                                <i class="bi bi-barcode"></i> Código
                            </label>
                            <input asp-for="codigo" class="form-control" placeholder="Ingrese el código del instrumento..." maxlength="50" />
                            <span asp-validation-for="codigo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label fw-bold">
                                <i class="bi bi-pen"></i> Nombre del Instrumento
                            </label>
                            <input asp-for="nombre" class="form-control" placeholder="Ingrese el nombre del instrumento..." />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="estuche" class="form-label fw-bold">
                                <i class="bi bi-box"></i> Estuche
                            </label>
                            <div class="form-check">
                                <input asp-for="estuche" class="form-check-input" type="checkbox" />
                                <label class="form-check-label">
                                    ¿Tiene estuche?
                                </label>
                            </div>
                            <span asp-validation-for="estuche" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="idCategoria" class="form-label fw-bold">
                                <i class="bi bi-tags"></i> Categoría
                            </label>
                            <select asp-for="idCategoria" class="form-select" asp-items="ViewBag.idCategoria"></select>
                            <span asp-validation-for="idCategoria" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-animado">
                                <i class="bi bi-check-circle"></i> Crear
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-animado">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
