@{
    ViewData["Title"] = "Inicio";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="~/css/styleLayout.css" rel="stylesheet" />


<h1 class="dashboard-title">Bienvenido a Armoniza</h1>

<div class="row mt-4 justify-content-center">


    @*Para usuarios*@
    <div class="col-md-4 col-sm-6 mb-4">
        <a asp-controller="usuarios" asp-action="Index" class="text-decoration-none">
            <div class="dashboard-card">
                <i class="bi bi-person-plus"></i>
                <h5 style="color: #3d87b9;">Usuarios</h5>
            </div>
        </a>
    </div>

    @*Para Instrumentos*@
    <div class="col-md-4 col-sm-6 mb-4">
        <a asp-controller="instrumentos" asp-action="Index" class="text-decoration-none">
            <div class="dashboard-card">
                <i class="bi bi-music-note"></i>
                <h5 style="color: #3d87b9;">Instrumentos</h5>
            </div>
        </a>
    </div>

    @*Para Grupos*@
    <div class="col-md-4 col-sm-6 mb-4">
        <a asp-controller="grupos" asp-action="Index" class="text-decoration-none">
            <div class="dashboard-card">
                <i class="bi bi-music-note-list"></i>
                <h5 style="color: #3d87b9;">Grupos Musicales</h5>
            </div>
        </a>
    </div>

    
    @*Para Apartados*@
    <div class="col-md-4 col-sm-6 mb-4">
        <a asp-controller="apartadoes" asp-action="Index" class="text-decoration-none">
            <div class="dashboard-card">
                <i class="bi bi-calendar2-check"></i>
                <h5 style="color: #3d87b9;">Apartados</h5>
            </div>
        </a>
    </div>

    @*Para Reportes*@
    <div class="col-md-4 col-sm-6 mb-4">
        <a asp-controller="reportes" asp-action="Index" class="text-decoration-none">
            <div class="dashboard-card">
                <i class="bi bi-bar-chart"></i>
                <h5 style="color: #3d87b9;">Reportes</h5>
            </div>
        </a>
    </div>

    @*Para Categorias*@
    <div class="col-md-4 col-sm-6 mb-4">
        <a asp-controller="categorias" asp-action="Index" class="text-decoration-none">
            <div class="dashboard-card">
                <i class="bi bi-collection"></i>
                <h5 style="color: #3d87b9;">Categorías</h5>
            </div>
        </a>
    </div>

</div>